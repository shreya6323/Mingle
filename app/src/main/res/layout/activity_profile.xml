<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".profile"
    android:orientation="vertical"
    android:gravity="center"
>




        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/person_grey"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/grey"
            tools:ignore="MissingConstraints"
            android:layout_marginRight="5dp"
            />


        <TextView
            android:id="@+id/textview1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abeezee"
            android:text="Profile info"
            android:textAlignment="center"
android:layout_marginBottom="20dp"
            android:textColor="#FFFBF8"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/textview3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
android:layout_marginBottom="4dp"
            android:text="Share your name and optionally add a profile photo or a brief 'about' section."
            android:textAlignment="center"
            android:textColor="#FFFBF8"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/name"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonsignup"
            android:gravity="center"
            android:hint="Name"
            android:maxLength="20"

            android:inputType="text"
            android:paddingRight="10dp"
            android:textColorHint="#FFFBF8" />
        <EditText
            android:id="@+id/about"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonsignup"
            android:gravity="center"
            android:hint="Hey, I am using Mingle !"
            android:maxLength="70"
            android:inputType="text"
            android:paddingRight="10dp"
            android:textColorHint="#FFFBF8" />

        <Button
            android:id="@+id/save"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"

            android:background = "@drawable/buttonsignup"
            android:gravity="center"
            android:paddingRight="24dp"
            android:text="Save"
            android:textSize="20sp"

            android:textColor="#FFFBF8"
            android:textStyle="bold" />
    </LinearLayout>
