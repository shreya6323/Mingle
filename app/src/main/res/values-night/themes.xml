    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item> <!-- Set your desired text size -->
        <item name="android:fontFamily">@font/moonlight</item> <!-- Specify your custom font -->
    </style>



</resources>
